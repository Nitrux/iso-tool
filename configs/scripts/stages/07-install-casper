#! /bin/bash

set -e

#	Source APT commands as functions.
#	shellcheck source=/dev/null

source /configs/scripts/others/apt-funcs


#	Add casper packages from bionic.
#	Remove bionic repo, we don't need it after.

CASPER_DEPS_PKGS='
	casper=1.480
	initramfs-tools=0.142ubuntu2.2
	initramfs-tools-bin=0.142ubuntu2.2
	initramfs-tools-core=0.142ubuntu2.2
'

install $CASPER_DEPS_PKGS


#	Hold initramfs and casper packages.

INITRAMFS_CASPER_PKGS='
	casper
	initramfs-tools
	initramfs-tools-core
	initramfs-tools-bin
'

hold $INITRAMFS_CASPER_PKGS
