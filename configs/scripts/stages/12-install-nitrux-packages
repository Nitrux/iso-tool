#! /bin/bash

set -xe

#	Source APT commands as functions.
#	shellcheck source=/dev/null

source /configs/scripts/others/apt-funcs


NITRUX_BASE_PKGS='
	base-files=13.1.33+nitrux-legacy
	nitrux-minimal-legacy
	nitrux-standard-legacy
'

