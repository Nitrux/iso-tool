#! /bin/bash

set -e

#	Source APT commands as functions.
#	shellcheck source=/dev/null

source /configs/scripts/others/apt-funcs


#	Add bootloader
#
#	The GRUB2 packages from Debian do not work correctly with EFI.

GRUB2_PKGS='
	grub-common/etch
	grub-efi-amd64/etch
	grub-efi-amd64-bin/etch
	grub-efi-amd64-signed/etch
	grub-pc-bin/etch
	grub2-common/etch
'

install $GRUB2_PKGS


#	Add packages for secure boot compatibility.

SB_SHIM_PKGS='
	sbsigntool/etch
	shim-signed/etch
	mokutil/etch
'

install $SB_SHIM_PKGS
