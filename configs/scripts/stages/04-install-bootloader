#! /bin/bash

set -e

#	Source APT commands as functions.
#	shellcheck source=/dev/null

source /configs/scripts/others/apt-funcs


#	Add bootloader
#
#	The GRUB2 packages from Debian do not work correctly with EFI.

GRUB2_PKGS='
	grub-common/any
	grub-efi-amd64/any
	grub-efi-amd64-bin/any
	grub-efi-amd64-signed/any
	grub-pc-bin/any
	grub2-common/any
'

install $GRUB2_PKGS


#	Add packages for secure boot compatibility.

SB_SHIM_PKGS='
	sbsigntool/any
	shim-signed/any
	mokutil/any
'

install $SB_SHIM_PKGS
